using System.Collections;
using System.Collections.Generic;
using UnityEngine;

//Copied from MisterSkitz @ https://forum.unity.com/threads/instantiating-item-when-enemy-dies-loot-drop.597634/

public class EnemyDMG : MonoBehaviour
{
    private int enemyHP;
    private ItemDrop getItem;

    private void Start()
    {
        enemyHP = Random.Range(50, 200);
        getItem = GetComponent<ItemDrop>();


        // Below this code is inside of a simple OnCollisionEnter2D() function
        // The enemy damage is calculated inside of this same function

        if (enemyHP <= 0)
        {
            if (getItem != null)
            {
                getItem.DropItem();
                Debug.Log("Dropped an Item " + getItem);
            }
            Destroy(gameObject);
        }
    }
}
